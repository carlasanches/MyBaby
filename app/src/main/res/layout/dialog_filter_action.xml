<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Por tipo:"/>

    <CheckBox
        android:id="@+id/checkBreastFeeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amamentação"/>

    <CheckBox
        android:id="@+id/checkBabyBottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mamadeira"/>

    <CheckBox
        android:id="@+id/checkDiaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troca de Fralda"/>

    <CheckBox
        android:id="@+id/checkSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sono"/>

    <CheckBox
        android:id="@+id/checkMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicamento"/>

    <CheckBox
        android:id="@+id/checkExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Outras Atividades"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por data:"/>

    <EditText
        android:id="@+id/actionDate"
        android:clickable="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

